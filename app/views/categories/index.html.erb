<%= link_to 'カテゴリー登録', new_category_path %>
<%= flash[:notice]%>
<ul>
  <% @categories.each do |category| %>
    <li><%= link_to(category.title, category_path(category)) %></li>
  <% end %>    
</ul> 
<%= paginate @categories %>   
<p>カテゴリー検索</p>
<%= form_with url: categories_path, method: :get, local: true do |form| %>
  <%= form.text_field :search %>
  <%= form.submit '検索' %>
<% end %>

